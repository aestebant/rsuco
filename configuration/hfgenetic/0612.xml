<configuration>
	<recommender name = 'subjectreco.recommender.HFStudentSubject'>
		<cfstudent>
			<normalize>false</normalize>
			<!-- PearsonCorrelationSimilarity / EuclideanDistanceSimilarity / CityBlockSimilarity /
			SpearmanCorrelationSimilarity	/ UncenteredCosineSimilarity -->
			<similarity>
				<ratingsSimilarity>org.apache.mahout.cf.taste.impl.similarity.PearsonCorrelationSimilarity</ratingsSimilarity>
				<gradesSimilarity>org.apache.mahout.cf.taste.impl.similarity.PearsonCorrelationSimilarity</gradesSimilarity>
				<ratingsWeight>0.287</ratingsWeight>
				<gradesWeight>0.485</gradesWeight>
				<branchWeight>0.228</branchWeight>
			</similarity>
			<!-- NearestNUserNeighborhood / ThresholdUserNeighborhood -->
			<neighborhood>
				<!-- 1: NearestNUserNeighborhood, 2: ThresholdUserNeighborhood -->
				<option>1</option>
				<size>12</size> <!-- for option 1 -->
				<threshold>0.5</threshold> <!-- for option 2 -->
			</neighborhood>
		</cfstudent>
		
		<cbfsubject>
			<similarity>
				<!-- TanimotoCoefficientSimilarity / LogLikelihoodSimilarity -->
				<professorsSimilarity>org.apache.mahout.cf.taste.impl.similarity.TanimotoCoefficientSimilarity</professorsSimilarity>
				<competencesSimilarity>org.apache.mahout.cf.taste.impl.similarity.TanimotoCoefficientSimilarity</competencesSimilarity>
				<professorsWeight>0.833</professorsWeight>
				<contentWeight>0.125</contentWeight>
				<areaWeight>0.042</areaWeight>
				<competencesWeight>0.0</competencesWeight>
				<documentaryDB>documentaryDB</documentaryDB>
			</similarity>
		</cbfsubject>
		
		<studentWeight>0.619</studentWeight>
	</recommender>
</configuration>